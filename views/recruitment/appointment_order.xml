<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_appointment_order_tree" model="ir.ui.view">
        <field name="name">appointment.order.tree</field>
        <field name="model">appointment.order</field>
        <field name="arch" type="xml">
            <tree string="Appointment Order">
                <field name="date"/>
                <field name="name"/>
                <field name="position_id"/>
                <field name="candidate_uid"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_appointment_order_form" model="ir.ui.view">
        <field name="name">appointment.order.form</field>
        <field name="model">appointment.order</field>
        <field name="arch" type="xml">
            <form string="Appointment Order">
                <header>
                    <button name="trigger_confirmed" string="Confirmed" type="object"
                            attrs="{'invisible': [('progress', '=', 'confirmed')]}"/>
                    <field name="progress" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="id" invisible="1"/>
                    <separator string="Appointment Order" style="text-align:center;"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image_medium'}"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h2>
                            <field name="name" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                        </h2>
                        <label for="candidate_uid" class="oe_edit_only" string="Candidate ID"/>
                        <h3>
                            <field name="candidate_uid" on_change="1" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                        </h3>
                    </div>
                    <group col="4">
                        <field name="date" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                        <field name="position_id" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                        <field name="department_id" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                        <field name="small_image" invisible="1" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                        <field name="very_small_image" invisible="1" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                    </group>
                    <notebook>
                        <!--Appointment Order-->
                        <page string="Appointment Order">
                            <field name="order_preview"/>
                        </page>

                        <!-- Detail Information-->
                        <page string="Detailed Information">
                            <notebook>

                                <page string="Qualification">
                                    <field name="qualification_ids" attrs="{'readonly': [('progress', '=', 'confirmed')]}">
                                        <tree string="Qualification" editable="bottom">
                                            <field name="name"/>
                                            <field name="institution"/>
                                            <field name="enrollment_year"/>
                                            <field name="completed_year"/>
                                            <field name="result"/>
                                            <field name="appointment_id" invisible="1"/>
                                        </tree>
                                    </field>
                                </page>

                                <page string="Experience">
                                    <field name="experience_ids" attrs="{'readonly': [('progress', '=', 'confirmed')]}">
                                        <tree string="Experience" editable="bottom">
                                            <field name="name"/>
                                            <field name="position"/>
                                            <field name="total_years"/>
                                            <field name="relieving_reason"/>
                                            <field name="appointment_id" invisible="1"/>
                                        </tree>
                                    </field>
                                </page>

                                <page string="Attachments">
                                    <group>
                                        <field name="attachment_ids"
                                               widget="many2many_binary"
                                               domain="[('res_id', '=', id), ('res_model', '=', 'appointment.order')]"
                                               attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                    </group>
                                </page>

                                <page string="Template">
                                    <field name="template"/>
                                </page>

                                <page string="Contact details">
                                    <group col="4">
                                        <field name="email" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="mobile" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="door_no" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="street" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="locality" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="city" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="state_id" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="country_id" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="zip_code" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="aadhar_card" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                    </group>
                                </page>

                                <page string="Personal Details">
                                    <group col="4">
                                        <field name="dob" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="age" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="marital_status" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="gender" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                        <field name="order" attrs="{'readonly': [('progress', '=', 'confirmed')]}"/>
                                    </group>
                                </page>

                            </notebook>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    

    <!-- Action-->
    <record id="action_appointment_order" model="ir.actions.act_window">
        <field name="name">Appointment Order</field>
        <field name="res_model">appointment.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

   


</odoo>
