<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hospital_warehouse_tree" model="ir.ui.view">
        <field name="name">hospital.warehouse.tree</field>
        <field name="model">hospital.warehouse</field>
        <field name="arch" type="xml">
            <tree string="Warehouse">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hospital_warehouse_form" model="ir.ui.view">
        <field name="name">hospital.warehouse.form</field>
        <field name="model">hospital.warehouse</field>
        <field name="arch" type="xml">
            <form string="Warehouse">
                <header>
                    <field name="progress" widget="statusbar" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                </header>
                <sheet>
                    <separator string="Warehouse" style="text-align:center;"/>
                    <group>
                        <field name="product_id" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="location_id" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="quantity" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_warehouse" model="ir.actions.act_window">
        <field name="name">Warehouse</field>
        <field name="res_model">hospital.warehouse</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
