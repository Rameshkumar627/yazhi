<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hospital_product_tree" model="ir.ui.view">
        <field name="name">hospital.product.tree</field>
        <field name="model">hospital.product</field>
        <field name="arch" type="xml">
            <tree string="Product">
                <field name="name"/>
                <field name="code"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hospital_product_form" model="ir.ui.view">
        <field name="name">hospital.product.form</field>
        <field name="model">hospital.product</field>
        <field name="arch" type="xml">
            <form string="Product">
                <header>
                    <field name="progress" widget="statusbar" attrs="{'invisible': [('progress', '!=', 'draft')]}"/>
                </header>
                <sheet>
                    <separator string="Product" style="text-align:center;"/>
                    <field name="code"/>
                    <group col="4">
                        <field name="name" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="product_type" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="group_id"
                               attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="sub_group_id"
                               domain="[('group_id', '=', group_id)]"
                               attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                        <field name="uom_id" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                    </group>
                    <notebook>
                        <page string="Inventory">
                            <field name="warehouse_ids">
                                <tree>
                                    <field name="location_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field name="comment" attrs="{'readonly': [('progress', '!=', 'draft')]}"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_product" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="res_model">hospital.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
