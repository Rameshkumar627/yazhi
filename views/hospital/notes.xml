<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hospital_notes_tree" model="ir.ui.view">
        <field name="name">hospital.notes.tree</field>
        <field name="model">hospital.notes</field>
        <field name="arch" type="xml">
            <tree string="Notes">
                <field name="from_time"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hospital_notes_form" model="ir.ui.view">
        <field name="name">hospital.notes.form</field>
        <field name="model">hospital.notes</field>
        <field name="arch" type="xml">
            <form string="Notes">
                <sheet>
                    <group>
                        <field name="from_time"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_notes" model="ir.actions.act_window">
        <field name="name">Notes</field>
        <field name="res_model">hospital.notes</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
