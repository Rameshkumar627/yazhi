<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_hospital_invoice_tree" model="ir.ui.view">
        <field name="name">hospital.invoice.tree</field>
        <field name="model">hospital.invoice</field>
        <field name="arch" type="xml">
            <tree string="Bill/ Receipt">
                <field name="date"/>
                <field name="partner_id"/>
                <field name="name"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_hospital_invoice_form" model="ir.ui.view">
        <field name="name">hospital.invoice.form</field>
        <field name="model">hospital.invoice</field>
        <field name="arch" type="xml">
            <form string="Bill/ Receipt">
                <header>
                    <field name="progress" widget="statusbar"/>
                </header>
                <sheet>
                    <separator string="Bill/ Receipt" style="text-align:center;"/>
                    <field name="name"/>
                    <group col="4">
                        <field name="date"/>
                        <field name="partner_id"/>
                    </group>
                    <notebook>
                        <page string="Bill Detail">
                            <field name="invoice_detail">
                                <tree editable="Bottom">
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="price"/>
                                    <field name="tax"/>
                                    <field name="discount"/>
                                    <field name="total_amount"/>
                                </tree>
								<form>
									<sheet>
										<group col="4">
											<field name="product_id"/>
											<field name="uom_id"/>
											<field name="price"/>
											<field name="tax"/>
											<field name="discount"/>
											<field name="total_amount"/>
										</group>
									</sheet>
								</form>
                            </field>
                        </page>
						<page string="Account Details">

						</page>
                    </notebook>
                    <group>
					<div style="float: left; width: 100%;">
						<table class="o_list_view table table-condensed table-striped mask">
							<thead>
								<tr>
									<th>sgst</th>
									<th>cgst</th>
									<th>igst</th>
								</tr>
							</thead>
							<tfoot>
								<tr><td></td><td></td><td></td></tr>
							</tfoot>
							<tbody>
								<tr>
									<td><field name="sgst" nolabel="1"/></td>
									<td><field name="cgst" nolabel="1"/></td>
									<td><field name="igst" nolabel="1"/></td>
								</tr>
							</tbody>
						</table>

						<table class="o_list_view table table-condensed table-striped mask">
							<tr>
								<th>Taxed Amount</th>
								<td><field name="taxed_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Un Taxed Amount</th>
								<td><field name="untaxed_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Discount Amount</th>
								<td><field name="discount_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Discounted Amount</th>
								<td><field name="discounted_amount" nolabel="1"/></td>
							</tr>

						</table>
					</div>

					<div style="float: right; width: 50%;">
						<table class="o_list_view table table-condensed table-striped mask">
							<tr>
								<th>Total</th>
								<td><field name="total" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Freight Charges</th>
								<td><field name="freight_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Tax Amount</th>
								<td><field name="tax_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Gross Amount</th>
								<td><field name="gross_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Round-Off</th>
								<td><field name="round_off_amount" nolabel="1"/></td>
							</tr>
							<tr>
								<th>Net Amount</th>
								<td><field name="net_amount" nolabel="1"/></td>
							</tr>

						</table>
					</div>
					</group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_invoice" model="ir.actions.act_window">
        <field name="name">Bill/ Receipt</field>
        <field name="res_model">hospital.invoice</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
