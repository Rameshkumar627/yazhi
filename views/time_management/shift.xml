<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_time_shift_tree" model="ir.ui.view">
        <field name="name">time.shift.tree</field>
        <field name="model">time.shift</field>
        <field name="arch" type="xml">
            <tree string="Shift">
                <field name="name"/>
                <field name="total_hours" widget="float_time"/>
                <field name="progress"/>
                <field name="end_day"/>
                <field name="from_hours"/>
                <field name="from_minutes"/>
                <field name="till_hours"/>
                <field name="till_minutes"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_time_shift_form" model="ir.ui.view">
        <field name="name">time.shift.form</field>
        <field name="model">time.shift</field>
        <field name="arch" type="xml">
            <form string="Shift">
                <header>
                    <button name="trigger_allocate" string="Confirm" type="object"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="total_hours" widget="float_time"/>
                        <field name="progress"/>
                        <field name="end_day"/>
                    </group>
                    <div col="4" style="width: 50px;" class="oe_inline">
                        <span><field name="from_hours" colspan="2" class="oe_inline"/></span>
                        <span>:</span>
                        <field name="from_minutes" nolabel="1" class="oe_inline"/>
                    </div>

                    <div col="4" style="width: 50px;" class="oe_inline">
                        <span><field name="till_hours" class="oe_inline"/></span>
                        <span>:</span>
                        <span><field name="till_minutes" class="oe_inline"/></span>
                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_time_shift" model="ir.actions.act_window">
        <field name="name">Shift</field>
        <field name="res_model">time.shift</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
