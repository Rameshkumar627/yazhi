<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree -->
    <record id="view_time_week_off_tree" model="ir.ui.view">
        <field name="name">time.week.off.tree</field>
        <field name="model">time.week.off</field>
        <field name="arch" type="xml">
            <tree string="Week Off">
                <field name="date"/>
                <field name="progress"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_time_week_off_form" model="ir.ui.view">
        <field name="name">time.week.off.form</field>
        <field name="model">time.week.off</field>
        <field name="arch" type="xml">
            <form string="Week Off">
                <header>
                    <field name="progress" widget="statusbar"/>
                    <button name="trigger_schedule" string="Schedule" type="object"/>
                </header>
                <sheet>
                    <group>
                        <field name="date"/>
                    </group>
                    <notebook>
                        <page string="Week Off Details">
                            <field name="week_off_detail">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="progress" invisible="1"/>
                                    <field name="employee_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_time_week_off" model="ir.actions.act_window">
        <field name="name">Week Off</field>
        <field name="res_model">time.week.off</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
